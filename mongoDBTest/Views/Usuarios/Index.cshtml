@using MongoDB.Bson
@using Repository.Models;
@model MongoDB.Driver.MongoCursor
@{
    ViewBag.Title = "Index";
}



<div class="row">
    <div class="col-xs-md-12">
        <table class=" table table-bordered">
            <tr>
                <th>_Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Ação</th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.Raw(((User)user)._id)</td>
                    <td>@Html.Raw(((User)user).name)</td>
                    <td>@Html.Raw(((User)user).email)</td>
                    <td>
                        <button class="btn btn-success" onclick="javascript:document.location='@Url.Action("Update", new { Id = @Html.Raw(((User)user)._id) })'">Editar</button>
                        <button class="btn btn-danger">Excluir</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>